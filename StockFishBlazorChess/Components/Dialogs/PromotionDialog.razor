<MudDialog>
	<TitleContent>
		<MudText Typo="Typo.h6">
			Select piece for promotion
		</MudText>
	</TitleContent>
	<DialogContent>
		<MudGrid>
			<MudItem xs="3" sm="3" md="3" lg="3" xl="3" xxl="3">
				<MudIconButton Icon="@Icons.Custom.Uncategorized.ChessQueen" OnClick="()=>promotionClick('q')"></MudIconButton>
			</MudItem>
			<MudItem xs="3" sm="3" md="3" lg="3" xl="3" xxl="3">
				<MudIconButton Icon="@Icons.Custom.Uncategorized.ChessRook" OnClick="()=>promotionClick('r')"></MudIconButton>
			</MudItem>
			<MudItem xs="3" sm="3" md="3" lg="3" xl="3" xxl="3">
				<MudIconButton Icon="@Icons.Custom.Uncategorized.ChessBishop" OnClick="()=>promotionClick('b')"></MudIconButton>
			</MudItem>
			<MudItem xs="3" sm="3" md="3" lg="3" xl="3" xxl="3">
				<MudIconButton Icon="@Icons.Custom.Uncategorized.ChessKnight" OnClick="()=>promotionClick('n')"></MudIconButton>
			</MudItem>
		</MudGrid>
	</DialogContent>
	<DialogActions>
		<MudButton Variant="Variant.Filled"  OnClick="cancelDialog"  Color="Color.Info">Cancel</MudButton>
	</DialogActions>
</MudDialog>
